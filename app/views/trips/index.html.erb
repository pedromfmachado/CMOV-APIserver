<h1>Listing trips</h1>

<table>
  <tr>
    <th>Begintime</th>
    <th>Triptype</th>
    <th>Train</th>
    <th>Line</th>
    <th>Arrivalstation</th>
    <th>Departurestation</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <td><%= trip.beginTime %></td>
    <td><%= trip.TripType %></td>
    <td><%= trip.Train %></td>
    <td><%= trip.Line %></td>
    <td><%= trip.ArrivalStation %></td>
    <td><%= trip.DepartureStation %></td>
    <td><%= link_to 'Show', trip %></td>
    <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
    <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

