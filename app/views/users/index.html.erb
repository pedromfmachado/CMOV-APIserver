<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Role</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.role %></td>
    <% if can? :promote, user %>
      <td><%= link_to( 'Promote', :controller => "users", :action => "promote", :id => user ) %></td>
      <td><%= link_to( 'Demote', :controller => "users", :action => "demote", :id => user ) %></td>
    <% end %>
  </tr>
<% end %>
</table>
