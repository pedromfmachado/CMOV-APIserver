<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :name %><br />
  <%= f.text_field :name %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :cctype, "Credit Card Type" %><br />
  <%= f.text_field :cctype %></div>

  <div><%= f.label :ccnumber, "Credit Card Number" %><br />
  <%= f.text_field :ccnumber %></div>

  <div><%= f.label :ccvalidity, "Credit Card Validity" %><br />
  <%= f.date_select :ccvalidity %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
